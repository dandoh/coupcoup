{
  "defaultSeverity": "error",
  "extends": [
    "tslint:recommended",
    "tslint-config-prettier",
    "tslint-react-hooks"
  ],
  "rules": {
    "react-hooks-nesting": "error",
    "no-empty-interface": false,
    "no-object-literal-type-assertion": true,
    "interface-name": false,
    "no-unused-expression": false,
    "variable-name": [
      true,
      "ban-keywords",
      "check-format",
      "allow-leading-underscore",
      "allow-pascal-case"
    ]
  },
  "rulesDirectory": []
}
